block_padding = 1px
w = 480px
h = 480px
len = 8

color_white = #fff
color_blue = #00f
color_text = #555
color_purple_hover = #403971
color_purple = #685f93
color_purple_disabled = #9b94b8

body
  background-image url('../images/background2.png')
  font-family sans-serif
  padding 0
  margin 0
  text-align center
  color color_text
  #game
    position relative
    width w
    height 100%
    margin 0 auto
    padding 15px
    text-align center
    #header
      #countimage
        width 30px
        height 30px
        background-image url('../images/cat8.png')
        background-size contain
        float left
      #countlabel
        font-size x-large
        float left
      #timelabel
        font-size x-large
        float right
    .overlay
      position absolute
      width w + block_padding * 2
      height 100%
      z-index 2
    #intro
      .title
        width 354px
        height 112px
        margin 0 auto
        background-image url('../images/title.png')
      .caption
        font-size 1.25rem
      .description
        .fig
          float left
          margin 5px
          width (w / 4)
          height (h / 4)
          background-size contain
          border solid
          border-width 1px
        #fig1
          background-image url('../images/fig1.png')
        #fig2
          background-image url('../images/fig2.png')
        #fig3
          background-image url('../images/fig3.png')
        .statement
          text-align left
          display table-cell
          height (h / 4)
          padding 5px
          vertical-align middle
    #message
      background-color rgba(0,0,0,.75)
      color color_white
      width 70%
      height 50%
      margin 0 15%
      top 25%
      .messagelabel
        font-size x-large
        margin-top 50px
      #backbutton
        position absolute
        left (50% - 10px)
        bottom 30px
    #field
      width w
      height h
      background-image url('../images/field.png')
      background-size contain
      padding block_padding
      margin-bottom 5px
      .row
        width w
        height (h / len)
        .block
          position relative
          margin block_padding
          width (w / len) - (block_padding * 2)
          height (h / len) - (block_padding * 2)
          background-color rgba(255, 255, 255, .75)
          float left
          .guide
            position absolute
            width 100%
            height 100%
            background-image url('../images/guide.png')
            background-size contain
            z-index 1
          .mark
            position absolute
            width 100%
            height 100%
            background-image url('../images/batsu.png')
            background-size contain
            z-index 2
        .block.active
          background-size contain
        .block.active.cat0
          background-image url('../images/cat0.png')
        .block.active.cat1
          background-image url('../images/cat1.png')
        .block.active.cat2
          background-image url('../images/cat2.png')
        .block.active.cat3
          background-image url('../images/cat3.png')
        .block.active.cat4
          background-image url('../images/cat4.png')
        .block.active.cat5
          background-image url('../images/cat5.png')
        .block.active.cat6
          background-image url('../images/cat6.png')
        .block.active.cat7
          background-image url('../images/cat7.png')
    #buttonarea
      text-align center
      .button
        width (w / 3 - 4)
        font-size .75rem
      .button.purple
        background-color color_purple !important
      .button.purple:hover
        background-color color_purple_hover !important
      .button.purple.disabled
        background-color color_purple_disabled !important
    #buttonarea2
      margin-top 5px
      text-align center
      .button
        width (w / 3 - 4)
        font-size .75rem
.clear
  clear both

